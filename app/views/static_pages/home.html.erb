<div class="page">
  <div class="container">
    <div class="col-md-10 col-md-offset-1">
      <div class="logo"><%= image_tag 'logo.svg' %></div>
      <p class="title"><span>Send this to someone in your family</span><p>

      <form name="myForm" ng-controller="LetterController" ng-submit="send()">

        <div class="">
          <table class="table">
            <thead>
              <tr>
                <th class="info">Votes</th>
               <th><%= image_tag "hillary.svg" %></th>
                <th><%= image_tag "bernie.svg" %></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="info">Voted against the Irag War.</td>
                <td></td>
                <td><i class="fa fa-check"></i></td>
              </tr>
              <tr>
                <td class="info">Voted against bailing out Wall Street</td>
                <td></td>
                <td><i class="fa fa-check"></i></td>
              </tr>
              <tr>
                <td class="info">Voted against the 2001 Patriot Act</td>
                <td></td>
                <td><i class="fa fa-check"></i></td>
              </tr>
               <tr>
                <td class="info">Supported the recognition of gay marriage, before becoming a 2016 Presidential candidate</td>
                <td></td>
                <td><i class="fa fa-check"></i></td>
              </tr>
            </tbody>
          </table>
        </div>

     <!--    <div class="letter">
          <i class="fa fa-quote-left fa-3x fa-pull-left"></i>
          <div class="display"><h1>{{text}}</h1></div>
          <i class="fa fa-quote-right fa-1x fa-pull-right"></i>
        </div> -->



        <div class="col-md-6 col-md-offset-3">
          <input ng-model="getter" class="form-control" type="email" placeholder="@ Receiver's email" required>
          <input ng-model="sender" class="form-control" type="email" placeholder="@ Your email" required>
          <textarea ng-model="text" class="form-control letter-input" ng-click="text = null" type="text" name="input" ng-trim="false">
          </textarea>
          <input type="submit" id="submit" value="Send" class="btn btn-block btn-send"/>
        </div>




      </form>
    </div>
  </div>
</div>
